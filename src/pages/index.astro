---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

import mowing from '@images/mowing.jpeg';
import hedging from '@images/hedging.jpeg';
import pool from '@images/pool.jpeg';
import profile from '@images/profile.jpeg'
---

<Layout title="Welcome to Astro.">
	<ul class="p-16 flex flex-wrap gap-10 justify-center">
		<Card title="Lawn Mowing" body="expertly crafted grass" image={mowing} location="/mowing" />
		<Card title="Hedging" body="beautiful hedges" image={hedging} location="/hedging"/>
		<Card title="Pool Cleaning" body="squeaky clean pools" image={pool} location="/pool-cleaning"/>
	</ul>
	<ul class="p-16 flex flex-wrap gap-10 justify-center">
		<Card
			title="About Me!"
			body="Hello, I am Seth Philip Carney. That is why I named my company SPC Property Management!"
			image={profile}
			location="/about"
		/>
	</ul>
</Layout>